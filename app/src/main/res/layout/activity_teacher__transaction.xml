<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher.Teacher_Transaction">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#1B7C06"
            android:layout_height="wrap_content">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="#1B7C06"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:background="@drawable/editback2"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="5dp"
                            android:backgroundTint="#BE052586"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:backgroundTint="#BE052586"
                                android:background="@drawable/border_back"
                                android:orientation="horizontal">
                                <Spinner
                                    android:id="@+id/search_type"
                                    android:backgroundTint="@color/white"
                                    android:layout_centerVertical="true"
                                    android:theme="@style/MatchSpinnerTheme"
                                    android:background="@android:color/transparent"
                                    android:layout_width="130dp"
                                    android:spinnerMode="dropdown"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                </Spinner>

                                <Button
                                    android:layout_width="31dp"
                                    android:layout_height="27dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginRight="4dp"
                                    android:clickable="false"
                                    android:background="@drawable/ic_arrow_drop_down_black_24dp"
                                    android:backgroundTint="@color/white" />

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/show_monthly_transaction"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:background="@drawable/editback2"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="10dp"
                            android:backgroundTint="#BE7B089B"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:backgroundTint="#BE7B089B"
                                android:background="@drawable/border_back"
                                android:orientation="horizontal">
                                <Spinner
                                    android:id="@+id/month"
                                    android:backgroundTint="@color/white"
                                    android:layout_centerVertical="true"
                                    android:theme="@style/MatchSpinnerTheme"
                                    android:background="@android:color/transparent"
                                    android:layout_width="110dp"
                                    android:spinnerMode="dropdown"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                </Spinner>

                                <Button
                                    android:layout_width="31dp"
                                    android:layout_height="27dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginRight="4dp"
                                    android:clickable="false"
                                    android:background="@drawable/ic_arrow_drop_down_black_24dp"
                                    android:backgroundTint="@color/white" />

                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/editback2"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="10dp"
                            android:backgroundTint="#BE86054C"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:backgroundTint="#BE7B089B"
                                android:background="@drawable/border_back"
                                android:orientation="horizontal">
                                <Spinner
                                    android:id="@+id/year"
                                    android:backgroundTint="@color/white"
                                    android:layout_centerVertical="true"
                                    android:theme="@style/MatchSpinnerTheme"
                                    android:background="@android:color/transparent"
                                    android:layout_width="90dp"
                                    android:spinnerMode="dropdown"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                </Spinner>

                                <Button
                                    android:layout_width="31dp"
                                    android:layout_height="27dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginRight="4dp"
                                    android:clickable="false"
                                    android:background="@drawable/ic_arrow_drop_down_black_24dp"
                                    android:backgroundTint="@color/white" />

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/show_yearly_transaction"
                        android:gravity="right"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/editback2"
                        android:backgroundTint="#D2078EA0"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="#BE7B089B"
                            android:background="@drawable/border_back"
                            android:orientation="horizontal">
                            <Spinner
                                android:id="@+id/year2"
                                android:backgroundTint="@color/white"
                                android:layout_centerVertical="true"
                                android:theme="@style/MatchSpinnerTheme"
                                android:background="@android:color/transparent"
                                android:layout_width="90dp"
                                android:spinnerMode="dropdown"
                                android:gravity="center"
                                android:layout_height="match_parent">
                            </Spinner>

                            <Button
                                android:layout_width="31dp"
                                android:layout_height="27dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginStart="20dp"
                                android:layout_marginRight="4dp"
                                android:clickable="false"
                                android:background="@drawable/ic_arrow_drop_down_black_24dp"
                                android:backgroundTint="@color/white" />

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/show_daily_transaction"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="3"
                        android:background="@drawable/editback2"
                        android:backgroundTint="#CE9B1605"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Day"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="0dp">
                        </TextView>
                        <TextView
                            android:id="@+id/day"
                            android:text="12.12.2010"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="0dp">
                        </TextView>
                        <Button
                            android:background="@drawable/dropdown"
                            android:layout_width="30dp"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:layout_height="0dp">
                        </Button>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/show_all_transaction"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/start_date"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="3"
                            android:background="@drawable/editback2"
                            android:backgroundTint="#E24E13A0"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="Start"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="0dp">
                            </TextView>
                            <TextView
                                android:id="@+id/start"
                                android:text="12.12.2010"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="0dp">
                            </TextView>
                            <Button
                                android:background="@drawable/dropdown"
                                android:layout_width="30dp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:layout_height="0dp">
                            </Button>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/end_date"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="3"
                            android:background="@drawable/editback2"
                            android:backgroundTint="#E4753607"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="End"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="0dp">
                            </TextView>
                            <TextView
                                android:id="@+id/end"
                                android:text="12.12.2010"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="0dp">
                            </TextView>
                            <Button
                                android:clickable="false"
                                android:background="@drawable/dropdown"
                                android:layout_width="30dp"
                                android:layout_weight="1"
                                android:layout_height="0dp">
                            </Button>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Transaction History"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:id="@+id/linear1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@drawable/table_border2"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:id="@+id/id"
                            android:text="T-Id"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color2"
                            android:textSize="14sp"
                            android:textAppearance="@style/table_header_text_style2"
                            android:layout_weight=".5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/transaction_type3"
                            android:text="Transaction Type"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color2"
                            android:textSize="14sp"
                            android:textAppearance="@style/table_header_text_style2"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/amount2"
                            android:text="Amount"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="14sp"
                            android:textAppearance="@style/table_header_text_style"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/debit_credit2"
                            android:text="Date"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="14sp"
                            android:textAppearance="@style/table_header_text_style"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycle1"
                            android:scrollbars="vertical"
                            android:background="@drawable/left_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:id="@+id/linear2"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:background="@drawable/table_border2"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:id="@+id/transaction_type"
                            android:text="Transaction Type"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color2"
                            android:textSize="14sp"
                            android:textAppearance="@style/table_header_text_style2"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/amount"
                            android:text="Total Amount"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="14sp"
                            android:textAppearance="@style/table_header_text_style"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycle2"
                            android:scrollbars="vertical"
                            android:background="@drawable/left_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>