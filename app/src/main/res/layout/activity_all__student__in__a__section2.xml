<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authority.All_Student_In_A_Section">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#03188B"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#19106B"
                    android:layout_height="60dp">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_margin="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".8">
                        <EditText
                            android:id="@+id/search"
                            android:textSize="12sp"
                            android:paddingStart="10dp"
                            android:gravity="center_vertical"
                            android:fontFamily="serif"
                            android:imeOptions="flagNoExtractUi|actionNext"
                            android:hint="Search Student"
                            android:background="@drawable/edit_back3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </EditText>
                        <Button
                            android:id="@+id/search_btn"
                            android:backgroundTint="#39056D"
                            android:background="@drawable/search"
                            android:layout_alignParentEnd="true"
                            android:layout_width="25dp"
                            android:layout_margin="8dp"
                            android:layout_height="match_parent">
                        </Button>
                    </RelativeLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/delete"
                    android:background="@drawable/delete2"
                    android:layout_width="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="30dp">
                </Button>
                <CheckBox
                    android:visibility="gone"
                    android:id="@+id/select_all"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/white"
                    android:text="All"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:buttonTint="@color/white"
                    android:button="@drawable/custom_checkbox"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp">
                </CheckBox>
            </LinearLayout>
            <LinearLayout
                android:weightSum="3"
                android:background="#10047C"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/medium"
                    android:gravity="center"
                    android:text="Medium:Bangla"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:id="@+id/class_name"
                    android:gravity="center"
                    android:text="Class:Ten"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:id="@+id/section_name"
                    android:gravity="center"
                    android:text="Section:A"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/total_student"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:background="#247C04"
                android:gravity="center"
                android:textSize="14sp"
                android:text="Total Students : 80"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </TextView>
            <TextView
                android:id="@+id/no_item"
                android:visibility="gone"
                android:text="No Student Still Added"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>




        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@drawable/red_circle"
            android:backgroundTint="@color/white"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_add_black_24dp"/>

    </FrameLayout>
</LinearLayout>