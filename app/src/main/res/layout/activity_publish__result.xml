<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    android:layout_height="match_parent"
    tools:context=".Teacher.Publish_Result">
    <Button
        android:background="@drawable/editback2"
        android:text="Upload CSV"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="12sp"
        android:layout_gravity="right"
        android:onClick="choose_and_readFile"
        android:textColor="@color/black"
        android:layout_width="120dp"
        android:layout_height="35dp">
    </Button>
    <LinearLayout
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:layout_weight="7"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
        <LinearLayout
            android:background="@drawable/table_border"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="250dp"
                android:layout_height="40dp">
                <TextView
                    android:text="Student Id"
                    android:textColor="@color/table_header_text_color"
                    android:textSize="@dimen/table_header_text_size"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/table_cell"
                    android:layout_width="0dp"
                    android:textAppearance="@style/table_header_text_style"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="Student Name"
                    android:textColor="@color/table_header_text_color"
                    android:textSize="@dimen/table_header_text_size"
                    android:gravity="center"
                    android:background="@drawable/table_cell"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textAppearance="@style/table_header_text_style"
                    android:layout_height="match_parent"/>
            </LinearLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle1"
                android:focusable="true"
                android:scrollbars="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <HorizontalScrollView
                android:id="@+id/scrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@drawable/table_border3"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="600dp"
                        android:layout_height="40dp">
                        <TextView
                            android:text="Total Marks"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="@dimen/table_header_text_size"
                            android:textAppearance="@style/table_header_text_style"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                        <LinearLayout
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="Distribution"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/table_cell"
                                android:textColor="@color/table_header_text_color"
                                android:textSize="@dimen/table_header_text_size"
                                android:textAppearance="@style/table_header_text_style"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                            </TextView>
                            <LinearLayout
                                android:layout_weight="1"
                                android:weightSum="3"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <TextView
                                    android:text="Subjective"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent">
                                </TextView>
                                <TextView
                                    android:text="Objective"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent">
                                </TextView>
                                <TextView
                                    android:text="Practical"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="Obtain Marks"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/table_cell"
                                android:textColor="@color/table_header_text_color"
                                android:textSize="@dimen/table_header_text_size"
                                android:textAppearance="@style/table_header_text_style"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                            </TextView>
                            <LinearLayout
                                android:layout_weight="1"
                                android:weightSum="3"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <TextView
                                    android:layout_weight="1"
                                    android:text="Subjective"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                </TextView>
                                <TextView
                                    android:layout_weight="1"
                                    android:text="Objective"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                </TextView>
                                <TextView
                                    android:layout_weight="1"
                                    android:text="Practical"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:text="Weight"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="@dimen/table_header_text_size"
                            android:textAppearance="@style/table_header_text_style"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycle2"
                            android:scrollbars="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1.2"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="0dp">
        <Button
            android:background="@drawable/signupbutton"
            android:layout_margin="5dp"
            android:text="SUBMIT"
            android:onClick="submit"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="300dp"
            android:layout_height="match_parent">
        </Button>

    </LinearLayout>

</LinearLayout>