<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    android:layout_marginRight="20dp"
    android:layout_height="wrap_content"
    tools:context=".Student.Other_Result">






    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <LinearLayout
            android:weightSum="2"
            android:layout_weight=".7"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Name"
                android:textSize="16sp"
                android:id="@+id/student_name"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp">
                <TextView
                    android:text="Student Id: "
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:text="none"
                    android:id="@+id/student_id"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.3"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/exam_type"
                    android:layout_marginLeft="20dp"
                    android:text="Monthly Exam"
                    android:textSize="13sp"
                    android:textColor="@color/blue"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:gravity="end|center_vertical"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="2.2"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColorHint="#1D5A8F"
                    android:layout_height="40dp"
                    android:background="@drawable/editback2"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/year"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:theme="@style/MySpinner"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp" />

                </RelativeLayout>
                <Button
                    android:layout_marginEnd="10dp"
                    android:id="@+id/download_pdf"
                    android:layout_gravity="center_vertical"
                    android:text="Download CSV"
                    android:textSize="12sp"
                    android:background="@drawable/editback2"
                    android:layout_width="140dp"
                    android:layout_height="40dp">
                </Button>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/table_border"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="190dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Subject Name"
                    android:layout_weight="1"
                    android:textColor="@color/table_header_text_color"
                    android:textSize="@dimen/table_header_text_size"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:background="@drawable/table_cell"
                    android:textAppearance="@style/table_header_text_style"
                    android:layout_height="40dp"/>
                <TextView
                    android:text="Exam Name"
                    android:layout_weight="1"
                    android:textColor="@color/table_header_text_color"
                    android:textSize="@dimen/table_header_text_size"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:background="@drawable/table_cell"
                    android:textAppearance="@style/table_header_text_style"
                    android:layout_height="40dp"/>
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle1"
                android:focusable="true"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@drawable/table_border4"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal"
                        android:layout_width="1300dp"
                        android:layout_height="40dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="Total Marks"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/table_cell"
                                android:textColor="@color/table_header_text_color"
                                android:textSize="@dimen/table_header_text_size"
                                android:textAppearance="@style/table_header_text_style"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                            </TextView>
                            <LinearLayout
                                android:layout_weight="1"
                                android:weightSum="4"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <TextView
                                    android:text="Subjective"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent">
                                </TextView>
                                <TextView
                                    android:text="Objective"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent">
                                </TextView>
                                <TextView
                                    android:text="Practical"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent">
                                </TextView>
                                <TextView
                                    android:text="Total"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="Highest Marks"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/table_cell"
                                android:textColor="@color/table_header_text_color"
                                android:textSize="@dimen/table_header_text_size"
                                android:textAppearance="@style/table_header_text_style"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                            </TextView>
                            <LinearLayout
                                android:layout_weight="1"
                                android:weightSum="4"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <TextView
                                    android:text="Subjective"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent">
                                </TextView>
                                <TextView
                                    android:text="Objective"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent">
                                </TextView>
                                <TextView
                                    android:text="Practical"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent">
                                </TextView>
                                <TextView
                                    android:text="Total"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="Obtain Marks"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/table_cell"
                                android:textColor="@color/table_header_text_color"
                                android:textSize="@dimen/table_header_text_size"
                                android:textAppearance="@style/table_header_text_style"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                            </TextView>
                            <LinearLayout
                                android:layout_weight="1"
                                android:weightSum="4"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <TextView
                                    android:layout_weight="1"
                                    android:text="Subjective"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                </TextView>
                                <TextView
                                    android:layout_weight="1"
                                    android:text="Objective"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                </TextView>
                                <TextView
                                    android:layout_weight="1"
                                    android:text="Practical"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                </TextView>
                                <TextView
                                    android:layout_weight="1"
                                    android:text="Total"
                                    android:gravity="center"
                                    android:background="@drawable/table_cell"
                                    android:textColor="@color/table_header_text_color"
                                    android:textSize="@dimen/table_header_text_size"
                                    android:textAppearance="@style/table_header_text_style"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:text="Weight"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="@dimen/table_header_text_size"
                            android:textAppearance="@style/table_header_text_style"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:text="Total(weight)"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="@dimen/table_header_text_size"
                            android:textAppearance="@style/table_header_text_style"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:text="Total(100%)"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="@dimen/table_header_text_size"
                            android:textAppearance="@style/table_header_text_style"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:text="LP"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="@dimen/table_header_text_size"
                            android:textAppearance="@style/table_header_text_style"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:text="GP"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="@dimen/table_header_text_size"
                            android:textAppearance="@style/table_header_text_style"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:text="Upload Date"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="@dimen/table_header_text_size"
                            android:textAppearance="@style/table_header_text_style"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/edit"
                            android:text="Edit"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="@dimen/table_header_text_size"
                            android:textAppearance="@style/table_header_text_style"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/delete"
                            android:text="Delete"
                            android:gravity="center"
                            android:background="@drawable/table_cell"
                            android:textColor="@color/table_header_text_color"
                            android:textSize="@dimen/table_header_text_size"
                            android:textAppearance="@style/table_header_text_style"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycle"
                            android:scrollbars="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>