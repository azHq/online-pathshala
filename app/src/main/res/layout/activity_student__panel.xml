<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Student.Student_Panel">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ToolBarStyle"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:openDrawer="start">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:itemIconTint="@color/colorPrimaryDark"
            app:itemTextColor="@color/black">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingTop="20dp"
                        android:background="@drawable/back2"
                        android:layout_width="match_parent"
                        android:layout_height="180dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:src="@drawable/man"
                            android:layout_width="match_parent"
                            android:layout_height="100dp">
                        </de.hdodenhof.circleimageview.CircleImageView>
                        <TextView
                            android:id="@+id/name"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="Name"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:id="@+id/email"
                            android:text="e@gmail.com"
                            android:textSize="14sp"
                            android:gravity="top|center_horizontal"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/profile"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/profile10"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                            </ImageView>

                            <TextView
                                android:text="Profile"
                                android:textSize="18sp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="40dp">
                            </TextView>

                        </LinearLayout>
                        <View
                            android:background="#6F918989"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/half_dp">
                        </View>
                        <LinearLayout
                            android:id="@+id/home_task"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/hometask"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                            </ImageView>

                            <TextView
                                android:text="Home Task"
                                android:textSize="18sp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="40dp">
                            </TextView>

                        </LinearLayout>
                        <View
                            android:background="#6F918989"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/half_dp">
                        </View>
                        <LinearLayout
                            android:id="@+id/my_classes"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/hometask"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                            </ImageView>

                            <TextView
                                android:text="My Classes"
                                android:textSize="18sp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="40dp">
                            </TextView>

                        </LinearLayout>
                        <View
                            android:background="#6F918989"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/half_dp">
                        </View>
                        <LinearLayout
                            android:id="@+id/result"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/result3"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                            </ImageView>

                            <TextView
                                android:text="Result"
                                android:textSize="18sp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="40dp">
                            </TextView>

                        </LinearLayout>
                        <View
                            android:background="#6F918989"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/half_dp">
                        </View>
                        <LinearLayout
                            android:id="@+id/teachers"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/teacher"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                            </ImageView>

                            <TextView
                                android:text="Teachers"
                                android:textSize="18sp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="40dp">
                            </TextView>

                        </LinearLayout>
                        <View
                            android:background="#6F918989"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/half_dp">
                        </View>
                        <LinearLayout
                            android:id="@+id/routine"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/routine"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                            </ImageView>

                            <TextView
                                android:text="Routine"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="40dp">
                            </TextView>

                        </LinearLayout>
                        <View
                            android:background="#6F918989"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/half_dp">
                        </View>
                        <LinearLayout
                            android:id="@+id/exam"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/exam"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                            </ImageView>

                            <TextView
                                android:text="Up Coming Exams"
                                android:textSize="18sp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="40dp">
                            </TextView>

                        </LinearLayout>
                        <View
                            android:background="#6F918989"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/half_dp">
                        </View>
                        <LinearLayout
                            android:id="@+id/contact"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/contact3"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                            </ImageView>

                            <TextView
                                android:text="Contacts"
                                android:layout_marginLeft="10dp"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="40dp">
                            </TextView>

                        </LinearLayout>
                        <View
                            android:background="#6F918989"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/half_dp">
                        </View>
                        <LinearLayout
                            android:id="@+id/pay_fees"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/transaction"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                            </ImageView>

                            <TextView
                                android:text="Pay Fees"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="40dp">
                            </TextView>

                        </LinearLayout>
                        <View
                            android:background="#6F918989"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/half_dp">
                        </View>
                        <LinearLayout
                            android:id="@+id/transaction_history"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/transaction3"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                            </ImageView>

                            <TextView
                                android:text="Transation History"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="40dp">
                            </TextView>

                        </LinearLayout>
                        <View
                            android:background="#6F918989"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/half_dp">
                        </View>
                        <LinearLayout
                            android:id="@+id/attendence"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/attendence"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                            </ImageView>

                            <TextView
                                android:text="Attendence History"
                                android:textSize="18sp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="40dp">
                            </TextView>

                        </LinearLayout>
                        <View
                            android:background="#6F918989"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/half_dp">
                        </View>
                        <LinearLayout
                            android:id="@+id/notice"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/notice2"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                            </ImageView>

                            <TextView
                                android:text="Notice"
                                android:textSize="18sp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="40dp">
                            </TextView>

                        </LinearLayout>
                        <View
                            android:background="#6F918989"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/half_dp">
                        </View>
                        <LinearLayout
                            android:id="@+id/logout"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/logout"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                            </ImageView>

                            <TextView
                                android:text="Logout"
                                android:textSize="18sp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="40dp">
                            </TextView>

                        </LinearLayout>
                        <View
                            android:background="#6F918989"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/half_dp">
                        </View>
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>



        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>