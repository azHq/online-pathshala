<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="800dp"
    android:layout_height="25dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/total_marks"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/table_body_text_size"
            android:textColor="@color/table_body_text_color"
            android:textAppearance="@style/table_body_text_style"
            android:layout_width="0dp"
            android:background="@drawable/table_cell"
            android:layout_height="match_parent">
        </TextView>
        <TextView
            android:id="@+id/highest_marks"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/table_body_text_size"
            android:textColor="@color/table_body_text_color"
            android:textAppearance="@style/table_body_text_style"
            android:layout_width="0dp"
            android:background="@drawable/table_cell"
            android:layout_height="match_parent">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:weightSum="4"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/class_test"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/table_body_text_size"
            android:textColor="@color/table_body_text_color"
            android:textAppearance="@style/table_body_text_style"
            android:layout_width="0dp"
            android:background="@drawable/table_cell"
            android:layout_height="match_parent">
        </TextView>
        <TextView
            android:id="@+id/monthly_test"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/table_body_text_size"
            android:textColor="@color/table_body_text_color"
            android:textAppearance="@style/table_body_text_style"
            android:layout_width="0dp"
            android:background="@drawable/table_cell"
            android:layout_height="match_parent">
        </TextView>
        <TextView
            android:id="@+id/half_yearly"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/table_body_text_size"
            android:textColor="@color/table_body_text_color"
            android:textAppearance="@style/table_body_text_style"
            android:layout_width="0dp"
            android:background="@drawable/table_cell"
            android:layout_height="match_parent">
        </TextView>
        <TextView
            android:id="@+id/final_exam"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/table_body_text_size"
            android:textColor="@color/table_body_text_color"
            android:textAppearance="@style/table_body_text_style"
            android:layout_width="0dp"
            android:background="@drawable/table_cell"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/total_obtain"
        android:layout_weight=".8"
        android:gravity="center"
        android:textSize="@dimen/table_body_text_size"
        android:textColor="@color/table_body_text_color"
        android:textAppearance="@style/table_body_text_style"
        android:layout_width="0dp"
        android:background="@drawable/table_cell"
        android:layout_height="match_parent">
    </TextView>
    <TextView
        android:id="@+id/lp"
        android:layout_weight=".5"
        android:gravity="center"
        android:textSize="@dimen/table_body_text_size"
        android:textColor="@color/table_body_text_color"
        android:textAppearance="@style/table_body_text_style"
        android:layout_width="0dp"
        android:background="@drawable/table_cell"
        android:layout_height="match_parent">
    </TextView>
    <TextView
        android:id="@+id/gp"
        android:layout_weight=".5"
        android:gravity="center"
        android:textSize="@dimen/table_body_text_size"
        android:textColor="@color/table_body_text_color"
        android:textAppearance="@style/table_body_text_style"
        android:layout_width="0dp"
        android:background="@drawable/table_cell"
        android:layout_height="match_parent">
    </TextView>


</LinearLayout>