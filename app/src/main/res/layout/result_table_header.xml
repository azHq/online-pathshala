<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="vertical"
                android:background="#C7560B"
                android:layout_height="70dp">
                <TextView
                    android:id="@+id/error"
                    android:gravity="center"
                    android:textColor="#E9DEDE"
                    android:textSize="16sp"
                    android:text="Error In Header"
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Your result table header name and order must be same as below"
                    android:textColor="#E9DEDE"
                    android:textSize="16sp"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="10"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/student_id"
                    android:gravity="center"
                    android:text="Student_id"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/student_name"
                    android:gravity="center"
                    android:text="Student_id"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/total_marks"
                    android:gravity="center"
                    android:text="Student_id"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/subjective_total"
                    android:gravity="center"
                    android:text="Student_id"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/objective_total"
                    android:gravity="center"
                    android:text="Student_id"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/practical_total"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="Student_id"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/obtain_mark_subjective"
                    android:gravity="center"
                    android:text="Student_id"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/obtain_mark_objective"
                    android:gravity="center"
                    android:text="Student_id"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/obtain_mark_practical"
                    android:gravity="center"
                    android:text="Student_id"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/weight"
                    android:gravity="center"
                    android:text="Student_id"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/missing_field"
                    android:gravity="center"
                    android:text="Missing Field Will be Hyphen"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/cancel"
                    android:text="Cancel"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:background="@drawable/border_back"
                    android:backgroundTint="#691313"
                    android:layout_height="40dp">
                </Button>
                <Button
                    android:id="@+id/ok"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Ok"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@drawable/border_back"
                    android:backgroundTint="@color/blue"
                    android:layout_width="0dp"
                    android:layout_height="40dp">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>